@model RoleViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Roles</h1>
<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">

    <partial name="RolePartialViews/EditCreateEployeePartialView" model="Model"/>
   
    <a asp-action="AddOrRemoveUsers" asp-route-roleId ="@Model.Id" class="btn btn-success"> Add Or Remove Users </a>

    <input type="Submit" value="Edit" class="btn btn-warning" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>

@section Validationsection {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script> <!--jquery-validation دي عشان استخدم ال-->
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}