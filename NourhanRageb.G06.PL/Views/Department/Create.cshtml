@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create Department Page</h1>
<br />
<br />

<form asp-action ="Create">
    <div class="form-group">
        <label asp-for="Code" for="code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div> 

    <div class="form-group">
        <label asp-for="DateOfCreation" for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" />
    </div>

    <br />
    
    <input type="Submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
