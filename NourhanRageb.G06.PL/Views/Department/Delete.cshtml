@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1> are you sure you want to Delete this Department!!</h1>
<br />
<br />
<form asp-action="Delete" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Code" for="code" class="col-form-label"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Name" for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="DateOfCreation" for="DateOfCreation" class="col-form-label"></label>
        <input asp-for="DateOfCreation" class="form-control" readonly />
    </div>

    <br />

   <input  type="Submit" value="Delete" class="btn btn-danger"/>
    <a asp-action="Index" class="btn btn-light">Cancel</a>
</form>

